<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".ForgotPasswordActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="160dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-224dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your account"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:textColor="@color/login_form_details"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="Enter your email address linked to your account"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/login_form_details_medium" />

        <EditText
            android:layout_marginTop="25dp"
            android:id="@+id/EmailAddress"
            android:layout_width="325dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:background="@drawable/et_bg"
            android:hint="@string/email_address"
            android:textColorHint="@color/login_form_details"
            android:inputType="textEmailAddress"
            android:textColor="@color/login_form_details"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:selectAllOnFocus="true"
            tools:targetApi="P" />

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:indeterminateTint="@color/login_form_details"
            tools:targetApi="lollipop"
            android:visibility="gone" />

        <Button
            android:id="@+id/next"
            android:layout_width="325dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:text="@string/next"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/login_form_details_medium"
            tools:targetApi="LOLLIPOP"/>

        <TextView
            android:id="@+id/resetText"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:text="We send an email with a link to get back into your account."
            android:textColor="@color/login_form_details_medium" />
    </LinearLayout>

</RelativeLayout>