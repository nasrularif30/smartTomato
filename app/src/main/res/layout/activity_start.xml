<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".StartActivity">

    <include
        android:id="@+id/toolbar"
        layout = "@layout/profile_bar_layout"/>

    <LinearLayout
        android:id="@+id/llutama"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/tomato" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:layout_marginLeft="-62dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/tulisan4" />

            <View
                android:id="@+id/header_line"
                android:layout_width="450dp"
                android:layout_height="1dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="-250dp"
                android:background="#fff" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/svutama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/login_form_details_medium"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_thermometer"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Suhu\nRuang"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_nilai_suhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="30.00 C"
                            android:textStyle="bold"
                            android:textSize="60sp"
                            android:layout_gravity="center"
                            android:textColor="#fff"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/login_form_details_medium"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_humidity"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Kelembapan\nRuang"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_nilai_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="50.00 %"
                            android:textStyle="bold"
                            android:textSize="60sp"
                            android:layout_gravity="center"
                            android:textColor="#fff"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/login_form_details_medium"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_ph"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="pH\nTanah"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_nilai_ph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="7.7"
                            android:textStyle="bold"
                            android:textSize="60sp"
                            android:layout_gravity="center"
                            android:textColor="#fff"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/login_form_details_medium"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_soil"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Kelembapan\nTanah\nRata-rata"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_nilai_kelembapantotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="50 %"
                            android:textStyle="bold"
                            android:textSize="60sp"
                            android:layout_gravity="center"
                            android:textColor="#fff"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/login_form_details_medium"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_soil"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Kelembapan\nTanah\nTitik 1"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_nilai_kelembapan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="50 %"
                            android:textStyle="bold"
                            android:textSize="60sp"
                            android:layout_gravity="center"
                            android:textColor="#fff"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/login_form_details_medium"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_soil"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Kelembapan\nTanah\nTitik 2"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_nilai_kelembapan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="50 %"
                            android:textStyle="bold"
                            android:textSize="60sp"
                            android:layout_gravity="center"
                            android:textColor="#fff"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/login_form_details_medium"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_soil"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Kelembapan\nTanah\nTitik 3"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_nilai_kelembapan3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="50 %"
                            android:textStyle="bold"
                            android:textSize="60sp"
                            android:layout_gravity="center"
                            android:textColor="#fff"/>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="660dp"
        android:gravity="center"
        android:background="@color/purple"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/siram"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_marginLeft="50dp"
            android:background="#9A3737"
            android:text="@string/siram"
            android:textAllCaps="false"
            android:textColor="@color/login_form_details"
            android:textSize="20sp" />

        <Button
            android:id="@+id/stop"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_marginLeft="30dp"
            android:background="#9A3737"
            android:fontFamily="@font/montserrat"
            android:text="@string/stop"
            android:textAllCaps="false"
            android:textColor="@color/login_form_details"
            android:textSize="20sp" />

        <View
            android:id="@+id/footer_line"
            android:layout_width="450dp"
            android:layout_height="1dp"
            android:layout_marginTop="-36dp"
            android:layout_marginLeft="-400dp"
            android:background="#fff" />
    </LinearLayout>
</RelativeLayout>